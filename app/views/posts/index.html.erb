<h1>Posts</h1>
<%= link_to 'Create', new_post_path,class: "btn btn-success"%>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody data-target="post.row" data-action="click->posts#show">
        <% @posts.each do |post|%>
            <tr>
                <td><%= post.title %></td>
                <td><%= post.body %></td>
                <td><%= link_to 'Show',post,class: "btn btn-info" %></td>
                <td><%= link_to 'Edit',edit_post_path(post),class: "btn btn-warning" %></td>
                <td><%= button_to 'Delete',post,method: :delete,class: "btn btn-danger" %></td>
            </tr>
        <% end %>
    </tbody>
</table>